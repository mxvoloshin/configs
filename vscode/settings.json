{
  // General settings
  "workbench.colorTheme": "Catppuccin Macchiato",
  "security.workspace.trust.untrustedFiles": "open",
  "explorer.confirmDelete": false,
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "explorer.confirmDragAndDrop": false,
  "git.confirmSync": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "editor.wordWrapColumn": 100,
  "diffEditor.wordWrap": "off",

  // SQL settings
  "[sql]": {
    "editor.defaultFormatter": "ms-mssql.mssql"
  },

  // JSON settings
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  // GitHub Copilot settings
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "chat.agent.enabled": true,

  // TypeScript settings
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.addMissingImports": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.preferRelativeImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  // HTML settings
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  // JavaScript settings
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "javascript.preferences.importModuleSpecifier": "relative",

  // C# settings
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },

  // Editor settings
  "editor.bracketPairColorization.enabled": false,
  "editor.lineHeight": 23,
  "editor.rulers": [120],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "UbuntuMono Nerd Font",
  "editor.codeLensFontFamily": "UbuntuMono Nerd Font",
  "editor.inlayHints.fontFamily": "UbuntuMono Nerd Font",
  "editor.inlineSuggest.fontFamily": "UbuntuMono Nerd Font",
  "scm.inputFontFamily": "UbuntuMono Nerd Font",
  "terminal.integrated.fontFamily": "UbuntuMono Nerd Font",
  "notebook.output.fontFamily": "UbuntuMono Nerd Font",
  "chat.editor.fontFamily": "UbuntuMono Nerd Font",
  "debug.console.fontFamily": "UbuntuMono Nerd Font",
  "editor.fontSize": 14,
  "debug.console.fontSize": 14,
  "terminal.integrated.fontSize": 14,
  "chat.editor.fontSize": 14,
  "window.zoomLevel": 1,  // Default is 0, try 1 or -1

  // Git settings
  "git.openRepositoryInParentFolders": "always",

  // Workbench settings
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "workbench.editor.tabActionLocation": "left",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.wrapTabs": true,
  "workbench.editor.enablePreviewFromCodeNavigation": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.showTabs": "multiple",
  "window.density.editorTabHeight": "compact",

  // Vim settings
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 500,
  "vim.leader": "<Space>",
  "editor.lineNumbers": "relative",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["d"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["D"],
      "after": ["\"", "_", "D"]
    },
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    {
      "before": ["c"],
      "after": ["\"", "_", "c"]
    },
    {
      "before": ["C"],
      "after": ["\"", "_", "C"]
    },
    {
      "before": ["<leader>", "g", "e"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "g", "c"],
      "commands": ["workbench.action.gotoSymbol"]
    },
    {
      "before": ["<leader>", "g", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "g", "s"],
      "commands": ["workbench.action.gotoSymbol"]
    },
    {
      "before": ["<leader>", "g", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["<leader>", "g", "y"],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    {
      "before": ["<leader>", "g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["<leader>", "g", "l"],
      "commands": ["workbench.action.gotoLine"]
    },
    {
      "before": ["<leader>", "u", "g"],
      "commands": ["references-view.findReferences"]
    },
    {
      "before": ["<leader>", "u", "u"],
      "commands": ["references-view.findReferences"]
    },
    {
      "before": ["<leader>", "t", "d"],
      "commands": ["editor.action.peekTypeDefinition"]
    },
    {
      "before": ["<leader>", "t", "i"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "s", "h"],
      "commands": ["editor.action.showHover"]
    },
    { "before": ["<leader>", "f"], "commands": ["actions.find"] },
    {
      "before": ["<leader>", "r", "f"],
      "commands": ["editor.action.startFindReplaceAction"]
    },
    { "before": ["<leader>", "r", "n"], "commands": ["editor.action.rename"] },
    {
      "before": ["<leader>", "r", "s"],
      "commands": ["editor.action.changeAll"]
    },
    {
      "before": ["<leader>", "<leader>"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<leader>", "o", "i"],
      "commands": ["editor.action.organizeImports"]
    },
    { "before": ["<C-k>"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["<C-l>"], "commands": ["editor.action.moveLinesUpAction"] },
    {
      "before": ["<leader>", "q", "q"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "q", "a"],
      "commands": ["workbench.action.closeAllEditors"]
    },
    {
      "before": ["leader", "o", "r"],
      "commands": ["workbench.action.openRecent"]
    },
    {
      "before": ["leader", "g", "t"],
      "commands": ["workbench.action.terminal.toggleTerminal"]
    },
    {
      "before": ["<leader>", "g", "b"],
      "commands": ["workbench.action.navigateBack"]
    },
    {
      "before": ["<leader>", "g", "n"],
      "commands": ["workbench.action.navigateForward"]
    },
    {
      "before": ["<leader>", "s", "a"],
      "commands": ["workbench.action.files.saveAll"]
    },
    {
      "before": ["<leader>", "s", "f"],
      "commands": ["workbench.action.files.save"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["d"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    {
      "before": ["c"],
      "after": ["\"", "_", "c"]
    }
  ],
  // Diff editor settings
  "diffEditor.hideUnchangedRegions.enabled": true,

  // PowerShell settings
  "powershell.promptToUpdatePowerShell": false,

  // MSSQL settings
  "mssql.enableRichExperiences": true,
  "mssql.enableRichExperiencesDoNotShowPrompt": true,


